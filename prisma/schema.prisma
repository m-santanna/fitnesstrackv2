generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model ExerciseGroup {
  id            String   @id @default(uuid())
  groupName     String   @db.VarChar(255)
  userId        String
  exercisesName String[]
  isPublic      Boolean
  users         User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([userId])
}

model ExerciseSet {
  id             String    @id @default(uuid())
  userId         String
  exerciseName   String
  reps           Int[]
  current_weight Decimal[] @db.Decimal(5, 2)
  timestamp      DateTime  @default(now()) @db.Date
  users          User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([userId])
}

model User {
  id      String          @id @default(uuid())
  email   String          @unique @db.VarChar(255)
  clerkId String          @unique
  created DateTime        @default(now()) @db.Date
  egroups ExerciseGroup[]
  sets    ExerciseSet[]
}
